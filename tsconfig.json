{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    //"watch": true,
    "lib": ["dom","es2017"],
    "noImplicitAny": true,
    //"strict": true,
    "allowJs": true,
    //"checkJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "*"
      ]
    }
  },
  "include": ["src/**/*"]
}
