<%- include('../partials/header')%>

<body class="d-flex flex-column vh-100">
  <%- include('../partials/navbar')%>
  <main class="container m-auto">
    <%- include('../partials/flash')%>
    <div class="row d-flex justify-content-center align-items-center mt-3 mb-3 ">
      <div
        class="col-xl-4 col-lg-5 col-md-6 col-sm-8 col-9 row-others d-flex justify-content-center align-items-center">
        <form action="/profile/<%=reqHeadersId%>/movies/results" method="POST">
          <div class="card mt-3" style="max-width: 20rem; width: 100%;">
            <img class="card-img-top" src="<%=image%>" alt="Card image cap">
            <div class="card-body pb-0">
              <h4 class="card-title"><%=title%> - <%=year%></h4>
              <hr>
              <h5 class="text-center">Description</h5>
              <p class="card-text text-center"><%=plot%></p>
              <h6 class="card-title">IMDB Rating: <%=imdbRating%></h6>
              <hr>
            </div>
            <div class="m-1 d-flex justify-content-center align-items-center">
              <input type="hidden" id="image" name="image" value="<%=image%>">
              <input type="hidden" id="title" name="title" value="<%=title%>">
              <input type="hidden" id="year" name="year" value="<%=year%>">
              <input type="hidden" id="plot" name="plot" value="<%=plot%>">
              <input type="hidden" id="imdbID" name="imdbID" value="<%=imdbID%>">
              <input type="hidden" id="imdbRating" name="imdbRating" value="<%=imdbRating%>">
              <button class="btn btn-success">Add Movie To Favorites</button>
            </div>
        </form>
        <div class="m-1 d-flex justify-content-center align-items-center">
          <a href="/profile/<%=reqHeadersId%>/movies/search" class="btn btn-danger">Search Again</a>
        </div>
      </div>
    </div>
    </div>

  </main>
  <%- include('../partials/footer')%>
